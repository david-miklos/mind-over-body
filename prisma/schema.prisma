generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id        String   @id @default(uuid())
    content   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    username  String?  @unique
    clerkId   String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
